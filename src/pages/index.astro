---
import Portada from "@components/Portada.astro";
import MainContent from "@components/MainContent.astro";
import Layout from "@layouts/Layout.astro";
import NavbarClient from "@/components/NavbarClient";
import UnderConstructionPage from "@/components/UnderConstructionPage.astro";
import { isUnderConstruction } from "@/lib/under-construction";
// Verificar si debemos mostrar la página en construcción
const underConstruction = isUnderConstruction();
---

{
  underConstruction ? (
    <Layout title="Òptica Guinart - En construcción">
      <UnderConstructionPage />
    </Layout>
  ) : (
    <Layout title="Òptica i Audiología Guinart">
      <Portada />
      <MainContent />
    </Layout>
  )
}
