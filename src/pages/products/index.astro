---
import Layout from "@/layouts/Layout.astro";
import productsData from "@data/products.json";
---

<Layout title="Productos - Óptica Guinart">
  <section class="bg-gradient-to-b from-gray-300 via-gray-200 to-gray-300 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 min-h-screen pt-20 sm:pt-24 lg:pt-28">
    
    {/* Hero Section - Ray-Ban Stories */}
    <div class="py-16 px-4 sm:px-8 lg:px-12">
      <div class="max-w-7xl mx-auto">
        <div class="relative bg-gradient-to-r from-slate-800 to-slate-900 dark:from-slate-700 dark:to-slate-800 rounded-3xl overflow-hidden shadow-2xl mb-20">
          <div class="absolute inset-0 bg-black/20"></div>
          <div class="relative z-10 px-8 py-16 sm:px-12 sm:py-20 lg:px-16 lg:py-24">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
              <div>
                <div class="inline-flex items-center bg-emerald-500/20 text-emerald-400 px-4 py-2 rounded-full text-sm font-semibold mb-6">
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  {productsData.hero.badge.text}
                </div>
                <h2 class="text-4xl sm:text-5xl lg:text-6xl font-black text-white mb-6 leading-tight">
                  {productsData.hero.title.main} <span class="text-emerald-400">{productsData.hero.title.highlight}</span>
                </h2>
                <p class="text-xl text-gray-300 dark:text-gray-200 mb-8 leading-relaxed">
                  {productsData.hero.description}
                </p>
                <div class="flex flex-col sm:flex-row gap-4">
                  {productsData.hero.buttons.map((button) => (
                    <button class={`${button.type === 'primary' 
                      ? 'bg-emerald-500 hover:bg-emerald-600 dark:bg-emerald-600 dark:hover:bg-emerald-500' 
                      : 'border-2 border-white/30 hover:border-white dark:border-white/40 dark:hover:border-white hover:bg-white/10 dark:hover:bg-white/20'} 
                      text-white px-8 py-4 rounded-xl font-bold text-lg transition-all duration-300 shadow-lg hover:shadow-xl`}>
                      {button.text}
                    </button>
                  ))}
                </div>
              </div>
              <div class="relative">
                <div class="w-full h-80 sm:h-96 bg-gradient-to-br from-emerald-400/20 to-blue-500/20 dark:from-emerald-500/30 dark:to-blue-400/30 rounded-2xl backdrop-blur-sm border border-white/10 dark:border-white/20 flex items-center justify-center">
                  <div class="text-center text-white/70 dark:text-white/80">
                    <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                    <p class="text-sm">{productsData.hero.imageAlt}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* Productos Destacados */}
        <div class="mb-20">
          <div class="text-center mb-12">
            <h2 class="text-4xl sm:text-5xl lg:text-6xl font-black text-slate-800 dark:text-white mb-4 tracking-tight drop-shadow-lg">
              {productsData.featuredProducts.title.main} <span class="text-emerald-600 dark:text-emerald-400">{productsData.featuredProducts.title.highlight}</span>
            </h2>
            <p class="text-lg sm:text-xl text-slate-600 dark:text-slate-300 max-w-2xl mx-auto font-medium">
              {productsData.featuredProducts.subtitle}
            </p>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {productsData.featuredProducts.products.map((product) => (
              <div class="group">
                <div class="flex flex-col bg-white/90 dark:bg-slate-800/80 backdrop-blur-md rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 border border-emerald-500/20 dark:border-emerald-400/20 overflow-hidden hover:bg-white dark:hover:bg-slate-700/80 h-full">
                  <div class="aspect-square bg-gradient-to-br from-slate-100 to-slate-200 dark:from-slate-700 dark:to-slate-600 rounded-xl mb-4 flex items-center justify-center">
                    <svg class="w-12 h-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  </div>
                  <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-2">{product.name}</h3>
                  <p class="text-slate-600 dark:text-slate-300 text-sm mb-4">{product.description}</p>
                  <div class="text-2xl font-black text-emerald-600 dark:text-emerald-400 mb-4">{product.price}</div>
                  <button class="w-full mt-auto bg-emerald-600 dark:bg-emerald-500 hover:bg-emerald-700 dark:hover:bg-emerald-400 text-white py-2 rounded-lg font-semibold transition-colors duration-300">
                    {product.buttonText}
                  </button>
                </div>
              </div>
            ))}
          </div>
        </div>

        {/* Sección de Ofertas */}
        <div class="mb-20">
          <div class="text-center mb-12">
            <h2 class="text-4xl sm:text-5xl lg:text-6xl font-black text-slate-800 dark:text-white mb-4 tracking-tight drop-shadow-lg">
              {productsData.specialOffers.title.main} <span class="text-red-600 dark:text-red-400">{productsData.specialOffers.title.highlight}</span>
            </h2>
            <p class="text-lg sm:text-xl text-slate-600 dark:text-slate-300 max-w-2xl mx-auto font-medium">
              {productsData.specialOffers.subtitle}
            </p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {productsData.specialOffers.offers.map((offer) => (
              <div class="relative group h-full">
                <div class={`bg-white/90 dark:bg-slate-800/80 backdrop-blur-md rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-300 border border-${offer.badgeColor}-500/40 dark:border-${offer.badgeColor}-400/30 overflow-hidden hover:bg-white dark:hover:bg-slate-700/80 h-full flex flex-col`}>
                  <div class={`absolute top-4 right-4 bg-${offer.badgeColor}-500 text-white px-4 py-2 rounded-full text-lg font-bold`}>
                    {offer.badge}
                  </div>
                  <div class="flex items-center gap-6 flex-grow">
                    <div class={`w-24 h-24 bg-${offer.badgeColor}-600 dark:bg-${offer.badgeColor}-500 rounded-xl flex items-center justify-center shadow-lg flex-shrink-0`}>
                      {offer.icon === 'sun' ? (
                        <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                      ) : (
                        <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                      )}
                    </div>
                    <div class="flex-grow flex flex-col justify-between">
                      <h3 class="text-2xl font-bold text-slate-800 dark:text-white mb-2">
                        {offer.title}
                      </h3>
                      <p class="text-slate-600 dark:text-slate-300 mb-4">
                        {offer.description}
                      </p>
                      <div class="flex items-center gap-3 mb-4">
                        <span class={`text-3xl font-black text-${offer.badgeColor}-600 dark:text-${offer.badgeColor}-400`}>
                          {offer.currentPrice}
                        </span>
                        {offer.originalPrice && (
                          <span class="text-xl text-slate-500 line-through">{offer.originalPrice}</span>
                        )}
                      </div>
                      <button class={`bg-${offer.buttonColor}-600 dark:bg-${offer.buttonColor}-500 hover:bg-${offer.buttonColor}-700 dark:hover:bg-${offer.buttonColor}-400 text-white px-6 py-3 rounded-lg font-bold transition-colors duration-300 shadow-lg`}>
                        {offer.buttonText}
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        {/* Sección de Contacto */}
        <div class="bg-gradient-to-r from-emerald-50 to-blue-50 dark:from-slate-800 dark:to-slate-700 rounded-3xl shadow-2xl p-8 sm:p-12 lg:p-16">
          <div class="text-center mb-12">
            <h2 class="text-4xl sm:text-5xl font-black text-slate-800 dark:text-white mb-4 tracking-tight">
              {productsData.contact.title.main} <span class="text-emerald-600 dark:text-emerald-400">{productsData.contact.title.highlight}</span>
            </h2>
            <p class="text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto leading-relaxed">
              {productsData.contact.subtitle}
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            {productsData.contact.contactMethods.map((method) => (
              <div class="bg-white/80 dark:bg-slate-600/50 backdrop-blur-sm rounded-2xl p-6 text-center shadow-lg hover:shadow-xl transition-all duration-300 group cursor-pointer">
                <div class={`w-10 h-10 bg-${method.color}-500 rounded-lg flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg`}>
                  {method.icon === 'whatsapp' && (
                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.106"/>
                    </svg>
                  )}
                  {method.icon === 'email' && (
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  )}
                  {method.icon === 'location' && (
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  )}
                </div>
                <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-2">{method.name}</h3>
                <p class="text-slate-600 dark:text-slate-300 mb-4">{method.description}</p>
                <div class="text-emerald-600 dark:text-emerald-400 font-semibold">{method.value}</div>
              </div>
            ))}
          </div>

          <div class="text-center">
            <button class="bg-emerald-600 hover:bg-emerald-700 dark:bg-emerald-500 dark:hover:bg-emerald-400 text-white px-8 py-4 rounded-xl font-bold text-lg transition-all duration-300 shadow-lg hover:shadow-xl">
              {productsData.contact.mainButton}
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>