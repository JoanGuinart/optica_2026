---
import Layout from '../../layouts/Layout.astro';
import faqData from '../../data/faq.json';
---

<Layout title="Preguntas Frecuentes - Òptica Guinart" description="FAQ sobre óptica, audiometría, audífonos y servicios en Sant Andreu (Barcelona). Resuelve dudas sobre revisiones visuales, lentes, gafas y salud auditiva.">
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <!-- FAQPage Structured Data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'FAQPage',
        mainEntity: [
          ...faqData.optica.map((faq) => ({
            '@type': 'Question',
            name: faq.question,
            acceptedAnswer: { '@type': 'Answer', text: faq.answer },
          })),
          ...faqData.audiometria.map((faq) => ({
            '@type': 'Question',
            name: faq.question,
            acceptedAnswer: { '@type': 'Answer', text: faq.answer },
          })),
          ...faqData.general.map((faq) => ({
            '@type': 'Question',
            name: faq.question,
            acceptedAnswer: { '@type': 'Answer', text: faq.answer },
          })),
        ],
      })}
    ></script>
    <!-- Hero Section -->
    <section class="py-20 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Preguntas Frecuentes
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Resolvemos tus dudas sobre óptica, audiometría y nuestros servicios
        </p>
        <div class="w-24 h-1 bg-emerald-500 mx-auto rounded-full"></div>
      </div>
    </section>

    <!-- FAQ Content -->
    <section class="pb-20 px-4">
      <div class="max-w-4xl mx-auto">
        
        <!-- Òptica FAQ -->
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 flex items-center">
            <svg class="w-8 h-8 mr-3 text-emerald-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
            </svg>
            Òptica y Visión
          </h2>
          
          <div class="space-y-4">
            {faqData.optica.map((faq, index) => (
              <div class="bg-white  rounded-xl shadow-lg border border-gray-200 ">
                <details class="group">
                  <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-gray-50  rounded-xl transition-colors">
                    <h3 class="text-lg font-semibold text-gray-900  pr-4">
                      {faq.question}
                    </h3>
                    <svg class="w-5 h-5 text-emerald-500 group-open:rotate-180 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </summary>
                  <div class="px-6 pb-6">
                    <p class="text-gray-600  leading-relaxed">
                      {faq.answer}
                    </p>
                  </div>
                </details>
              </div>
            ))}
          </div>
        </div>

        <!-- Audiometría FAQ -->
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-gray-900  mb-8 flex items-center">
            <svg class="w-8 h-8 mr-3 text-emerald-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 1c-4.97 0-9 4.03-9 9v7c0 1.66 1.34 3 3 3h3v-8H5v-2c0-3.87 3.13-7 7-7s7 3.13 7 7v2h-4v8h3c1.66 0 3-1.34 3-3v-7c0-4.97-4.03-9-9-9z"/>
            </svg>
            Audiometría y Audición
          </h2>
          
          <div class="space-y-4">
            {faqData.audiometria.map((faq, index) => (
              <div class="bg-white  rounded-xl shadow-lg border border-gray-200 ">
                <details class="group">
                  <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-gray-50  rounded-xl transition-colors">
                    <h3 class="text-lg font-semibold text-gray-900  pr-4">
                      {faq.question}
                    </h3>
                    <svg class="w-5 h-5 text-emerald-500 group-open:rotate-180 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </summary>
                  <div class="px-6 pb-6">
                    <p class="text-gray-600  leading-relaxed">
                      {faq.answer}
                    </p>
                  </div>
                </details>
              </div>
            ))}
          </div>
        </div>

        <!-- General FAQ -->
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-gray-900  mb-8 flex items-center">
            <svg class="w-8 h-8 mr-3 text-emerald-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
            Información General
          </h2>
          
          <div class="space-y-4">
            {faqData.general.map((faq, index) => (
              <div class="bg-white  rounded-xl shadow-lg border border-gray-200 ">
                <details class="group">
                  <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-gray-50  rounded-xl transition-colors">
                    <h3 class="text-lg font-semibold text-gray-900  pr-4">
                      {faq.question}
                    </h3>
                    <svg class="w-5 h-5 text-emerald-500 group-open:rotate-180 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </summary>
                  <div class="px-6 pb-6">
                    <p class="text-gray-600  leading-relaxed">
                      {faq.answer}
                    </p>
                  </div>
                </details>
              </div>
            ))}
          </div>
        </div>

        <!-- Contact CTA -->
        <div class="bg-emerald-500 rounded-2xl p-8 text-center text-white">
          <h3 class="text-2xl font-bold mb-4">¿No encuentras tu respuesta?</h3>
          <p class="text-emerald-100 mb-6">
            Nuestro equipo estará encantado de resolver cualquier duda adicional que tengas
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/contact" 
              class="bg-white text-emerald-500 px-6 py-3 rounded-lg font-semibold hover:bg-emerald-50 transition-colors"
            >
              Contactar
            </a>
            <a 
              href="tel:+34123456789" 
              class="bg-emerald-700 text-white px-6 py-3 rounded-lg font-semibold hover:bg-emerald-800 transition-colors border border-emerald-400"
            >
              Llamar ahora
            </a>
          </div>
        </div>

      </div>
    </section>
  </main>
</Layout>
