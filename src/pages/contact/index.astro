---
import Layout from "@/layouts/Layout.astro";
import contactData from "@data/contact.json";
---

<Layout title="Contacto - Óptica Vision">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section
      class="relative py-20 sm:py-32 bg-gradient-to-br from-emerald-50 via-white to-blue-50 overflow-hidden"
    >
      {/* Decoración de fondo */}
      <div
        class="absolute inset-0 bg-[url('/api/placeholder/1920/1080')] opacity-5"
      >
      </div>
      <div
        class="absolute top-10 right-10 w-72 h-72 bg-emerald-500/10 rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-10 left-10 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"
      >
      </div>

      <div class="relative container mx-auto px-6 text-center">
        {/* Badge */}
        <div
          class="inline-flex items-center px-4 py-2 bg-emerald-600/10 text-emerald-700 rounded-full text-sm font-semibold mb-8 border border-emerald-600/20"
        >
          <svg
            class="w-4 h-4 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
            ></path>
          </svg>
          {contactData.hero.badge.text}
        </div>

        <h1
          class="text-4xl sm:text-5xl md:text-7xl font-black text-slate-900 mb-6 leading-tight"
        >
          {contactData.hero.title.main}
          <span class="text-emerald-600"
            >{contactData.hero.title.highlight}</span
          >
        </h1>
        <p
          class="text-lg sm:text-xl text-slate-600 max-w-3xl mx-auto font-medium leading-relaxed"
        >
          {contactData.hero.subtitle}
        </p>
      </div>
    </section>

    {/* Contenido Principal */}
    <section class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          {/* Información de Contacto */}
          <div class="space-y-8">
            <div>
              <h2
                class="text-3xl font-bold text-slate-900 mb-6"
              >
                Información de Contacto
              </h2>
              <p class="text-slate-600 mb-8">
                Ponte en contacto con nosotros por cualquiera de estos medios
              </p>
            </div>

            {/* Datos de Contacto */}
            <div class="space-y-6">
              {/* Teléfono */}
              <div
                class="flex items-start space-x-4 p-6 bg-slate-50  rounded-2xl border border-slate-200  hover:border-emerald-500/30  transition-colors"
              >
                <div
                  class="w-12 h-12 bg-emerald-600  rounded-xl flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900 ">
                    Teléfono
                  </h3>
                  <p class="text-slate-600 ">
                    {contactData.contactInfo.phone.display}
                  </p>
                  <a
                    href={`https://wa.me/${contactData.contactInfo.phone.whatsapp}`}
                    target="_blank"
                    class="inline-flex items-center text-emerald-600  hover:text-emerald-700  font-medium mt-1"
                  >
                    <svg
                      class="w-4 h-4 mr-1"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"
                      ></path>
                    </svg>
                    WhatsApp
                  </a>
                </div>
              </div>

              {/* Email */}
              <div
                class="flex items-start space-x-4 p-6 bg-slate-50  rounded-2xl border border-slate-200  hover:border-emerald-500/30  transition-colors"
              >
                <div
                  class="w-12 h-12 shrink-0 bg-emerald-600  rounded-xl flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div class="min-w-0 flex-1">
                  <h3 class="font-semibold text-slate-900 ">
                    Email
                  </h3>
                  <a
                    href={`mailto:${contactData.contactInfo.email.address}`}
                    class="text-emerald-600  hover:text-emerald-700  break-all sm:break-normal text-sm sm:text-base"
                  >
                    {contactData.contactInfo.email.address}
                  </a>
                </div>
              </div>

              {/* Dirección */}
              <div
                class="flex items-start space-x-4 p-6 bg-slate-50  rounded-2xl border border-slate-200  hover:border-emerald-500/30  transition-colors"
              >
                <div
                  class="w-12 h-12 bg-emerald-600  rounded-xl flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900 ">
                    Dirección
                  </h3>
                  <p class="text-slate-600 ">
                    {contactData.contactInfo.address.street}
                  </p>
                  <p class="text-slate-600 ">
                    {contactData.contactInfo.address.city}
                  </p>
                  <a
                    href={contactData.contactInfo.address.googleMaps}
                    target="_blank"
                    class="inline-flex items-center text-emerald-600  hover:text-emerald-700  font-medium mt-1"
                  >
                    <svg
                      class="w-4 h-4 mr-1"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                      ></path>
                    </svg>
                    Ver en Google Maps
                  </a>
                </div>
              </div>

              {/* Horarios */}
              <div
                class="flex items-start space-x-4 p-6 bg-slate-50  rounded-2xl border border-slate-200 "
              >
                <div
                  class="w-12 h-12 bg-emerald-600  rounded-xl flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900 ">
                    Horarios
                  </h3>
                  <p class="text-slate-600 ">
                    {contactData.contactInfo.hours.weekdays}
                  </p>
                  <p class="text-slate-600 ">
                    {contactData.contactInfo.hours.saturday}
                  </p>
                  <p class="text-slate-600 ">
                    {contactData.contactInfo.hours.sunday}
                  </p>
                </div>
              </div>
            </div>

            {/* Redes Sociales */}
            <div class="pt-8 border-t border-slate-200 ">
              <h3 class="text-xl font-bold text-slate-900  mb-6">
                Síguenos en Redes
              </h3>
              <div class="grid grid-cols-2 gap-4">
                {/* WhatsApp */}
                <a
                  href={contactData.socialMedia.whatsapp.url}
                  target="_blank"
                  class="flex items-center justify-center p-4 bg-gradient-to-br from-green-400 to-green-600 text-white rounded-xl hover:from-green-500 hover:to-green-700 transition-all shadow-lg"
                >
                  <svg
                    class="w-6 h-6 mr-3"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"
                    ></path>
                  </svg>
                  <span class="font-medium">WhatsApp</span>
                </a>

                {/* Instagram */}
                <a
                  href={contactData.socialMedia.instagram.url}
                  target="_blank"
                  class="flex items-center justify-center p-4 bg-gradient-to-br from-purple-500 via-pink-500 to-orange-400 text-white rounded-xl hover:from-purple-600 hover:via-pink-600 hover:to-orange-500 transition-all border border-pink-200  shadow-lg"
                >
                  <svg
                    class="w-6 h-6 mr-3"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                    ></path>
                  </svg>
                  <span class="font-medium">Instagram</span>
                </a>

                {/* Facebook */}
                <a
                  href={contactData.socialMedia.facebook.url}
                  target="_blank"
                  class="flex items-center justify-center p-4 bg-gradient-to-br from-blue-600 to-blue-800 text-white rounded-xl hover:from-blue-700 hover:to-blue-900 transition-all shadow-lg"
                >
                  <svg
                    class="w-6 h-6 mr-3"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                    ></path>
                  </svg>
                  <span class="font-medium">Facebook</span>
                </a>

                {/* Google */}
                <a
                  href={contactData.socialMedia.google.url}
                  target="_blank"
                  class="flex items-center justify-center p-4 bg-gradient-to-r from-blue-500 via-red-500 to-yellow-500 text-white rounded-xl hover:from-blue-600 hover:via-red-600 hover:to-yellow-600 transition-all shadow-lg"
                >
                  <svg
                    class="w-6 h-6 mr-3"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                    ></path>
                    <path
                      d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                    ></path>
                    <path
                      d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                    ></path>
                    <path
                      d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                    ></path>
                  </svg>
                  <span class="font-medium">Google</span>
                </a>
              </div>
            </div>
          </div>

          {/* Formulario de Contacto */}
          <div class="bg-slate-50  rounded-3xl p-8">
            <div class="mb-8">
              <h2
                class="text-3xl font-bold text-slate-900  mb-4"
              >
                {contactData.form.title}
              </h2>
              <p class="text-slate-600 ">
                {contactData.form.subtitle}
              </p>
            </div>

            <form class="space-y-6" action="#" method="POST">
              {/* Nombre */}
              <div>
                <label
                  for="name"
                  class="block text-sm font-medium text-slate-700  mb-2"
                >
                  {contactData.form.fields.name.label} *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  placeholder={contactData.form.fields.name.placeholder}
                  class="w-full px-4 py-3 bg-white  border border-slate-300  rounded-xl focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500   text-slate-900  placeholder-slate-500 "
                />
              </div>

              {/* Email */}
              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-slate-700  mb-2"
                >
                  {contactData.form.fields.email.label} *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  placeholder={contactData.form.fields.email.placeholder}
                  class="w-full px-4 py-3 bg-white  border border-slate-300  rounded-xl focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500   text-slate-900  placeholder-slate-500 "
                />
              </div>

              {/* Teléfono */}
              <div>
                <label
                  for="phone"
                  class="block text-sm font-medium text-slate-700  mb-2"
                >
                  {contactData.form.fields.phone.label}
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  placeholder={contactData.form.fields.phone.placeholder}
                  class="w-full px-4 py-3 bg-white  border border-slate-300  rounded-xl focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500   text-slate-900  placeholder-slate-500 "
                />
              </div>

              {/* Asunto */}
              <div>
                <label
                  for="subject"
                  class="block text-sm font-medium text-slate-700  mb-2"
                >
                  {contactData.form.fields.subject.label} *
                </label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  required
                  placeholder={contactData.form.fields.subject.placeholder}
                  class="w-full px-4 py-3 bg-white  border border-slate-300  rounded-xl focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500   text-slate-900  placeholder-slate-500 "
                />
              </div>

              {/* Mensaje */}
              <div>
                <label
                  for="message"
                  class="block text-sm font-medium text-slate-700  mb-2"
                >
                  {contactData.form.fields.message.label} *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  placeholder={contactData.form.fields.message.placeholder}
                  class="w-full px-4 py-3 bg-white  border border-slate-300  rounded-xl focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500   text-slate-900  placeholder-slate-500  resize-none"
                ></textarea>
              </div>

              {/* Botón */}
              <button
                type="submit"
                class="w-full bg-emerald-700  hover:bg-emerald-800  text-white font-semibold py-4 px-6 rounded-xl transition-colors focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2   flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>
                {contactData.form.button.text}
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>

    {/* Características */}
    <section class="py-20 bg-slate-50 ">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2
            class="text-3xl sm:text-4xl font-bold text-slate-900  mb-4"
          >
            ¿Por qué contactarnos?
          </h2>
          <p
            class="text-lg text-slate-600  max-w-2xl mx-auto"
          >
            Te ofrecemos la mejor atención y servicio al cliente
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {
            contactData.features.map((feature) => (
              <div class="text-center p-8 bg-white  rounded-2xl shadow-lg border border-slate-200 ">
                <div class="w-16 h-16 bg-emerald-600  rounded-2xl flex items-center justify-center mx-auto mb-6">
                  <svg
                    class="w-8 h-8 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d={feature.iconPath}
