---
import NavbarClient from "@/components/NavbarClient";
import "@styles/global.css";
export interface Props {
  title?: string;
}

const { title = "Óptica Web" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Óptica Web - Tu tienda de lentes de confianza"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      // Implementación oficial de Tailwind v4 para dark mode
      document.documentElement.classList.toggle(
        "dark",
        localStorage.theme === "dark" ||
          (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches),
      );
    </script>
  </head>
  <body class="bg-white dark:bg-slate-900 text-slate-900 dark:text-white transition-colors duration-300">
    <NavbarClient client:only="react" />
    <slot />
  </body>
</html>
