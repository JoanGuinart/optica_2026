---
import mainContentData from "@data/main-content.json";
---

<section
  class="bg-gradient-to-b from-gray-300 via-gray-200 to-gray-300 min-h-screen pt-20 sm:pt-24 lg:pt-28"
>
  {/* Sección de Ofertas Especiales */}
  <div class="py-16 px-4 sm:px-8 lg:px-12">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <h2
          class="text-4xl sm:text-5xl lg:text-6xl font-black text-slate-800 mb-4 tracking-tight drop-shadow-lg"
        >
          {mainContentData.specialOffers.title.main}
          <span class="text-emerald-600"
            >{mainContentData.specialOffers.title.highlight}</span
          >
        </h2>
        <p
          class="text-lg sm:text-xl text-slate-600 max-w-2xl mx-auto font-medium"
        >
          {mainContentData.specialOffers.subtitle}
        </p>
      </div>

      {/* Grid de Ofertas */}
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16 items-stretch"
      >
        {
          mainContentData.specialOffers.offers.map((offer) => (
            <div class="relative group h-full">
              <div class="bg-white/90  backdrop-blur-md rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-300 border border-emerald-500/40  overflow-hidden hover:bg-white  h-full flex flex-col">
                <div
                  class={`absolute top-4 right-4 bg-${offer.badgeColor === "emerald" ? "emerald-700 " : offer.badgeColor + "-600"} text-white px-3 py-1 rounded-full text-sm font-bold`}
                >
                  {offer.badge}
                </div>
                <div class="w-20 h-20 bg-emerald-700  rounded-xl flex items-center justify-center mb-6 mx-auto shadow-lg">
                  <svg
                    class="w-10 h-10 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width={2}
                      d={offer.iconPath}
                    />
                  </svg>
                </div>
                <div class="flex flex-col flex-grow">
                  <h3 class="text-2xl font-bold text-slate-800  mb-3 text-center">
                    {offer.title}
                  </h3>
                  <p class="text-slate-600  text-center mb-4 leading-relaxed flex-grow">
                    {offer.description}
                  </p>
                  <div class="text-center mb-6">
                    <span class="text-3xl font-black text-emerald-600 ">
                      {offer.currentPrice}
                    </span>
                    {offer.originalPrice && (
                      <span class="text-lg text-slate-500 line-through ml-2">
                        {offer.originalPrice}
                      </span>
                    )}
                    {offer.priceNote && (
                      <span class="text-sm text-slate-500  block">
                        {offer.priceNote}
                      </span>
                    )}
                  </div>
                  <a href={offer.url} target="_blank" class="w-full mt-auto text-center bg-emerald-700  hover:bg-emerald-800  text-white py-3 rounded-lg font-bold transition-colors duration-300 shadow-lg">
                    {offer.buttonText}
                  </a>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  {/* Sección de Productos Destacados */}
  <section
    class="py-16 bg-gradient-to-r from-gray-100 to-gray-200 text-slate-800 border-t border-emerald-500/30"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-8 lg:px-12">
      <div class="text-center mb-12">
        <h2
          class="text-4xl sm:text-5xl lg:text-6xl font-black mb-4 tracking-tight drop-shadow-lg"
        >
          {mainContentData.featuredProducts.title.main}
          <span class="text-emerald-600"
            >{mainContentData.featuredProducts.title.highlight}</span
          >
        </h2>
        <p
          class="text-lg sm:text-xl text-slate-600 max-w-2xl mx-auto font-medium"
        >
          {mainContentData.featuredProducts.subtitle}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          mainContentData.featuredProducts.products.map((product) => (
            <div class="flex flex-col bg-white/80 backdrop-blur-md rounded-2xl p-6 hover:bg-white transition-all duration-300 border border-emerald-500/30 ">
              <div class="aspect-square bg-gray-300 rounded-lg mb-4 flex items-center justify-center">
               <img src={product.src} alt={product.imagePlaceholder} class="mix-blend-multiply object-contain w-full h-full rounded-lg"/>
              </div>
              <h3 class="text-xl font-bold mb-2 uppercase">{product.name}</h3>
              <p class="text-slate-600  text-sm mb-4">{product.description}</p>
              <div class="flex justify-between items-center mt-auto">
                <span class="text-2xl font-black text-emerald-600 ">
                  {product.price}
                </span>
                <a href={"https://wa.me/34682502960?text=" + encodeURIComponent(`quiero el producto: ${product.name} / ${product.description}`)} target="_blank" class="bg-emerald-700  hover:bg-emerald-800  px-4 py-2 rounded-lg font-bold text-sm transition-colors text-white">
                  {product.buttonText}
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  {/* Call to Action Final */}
  <section
    class="py-16 px-4 sm:px-8 lg:px-12 bg-gradient-to-b from-gray-200 to-gray-300"
  >
    <div class="max-w-4xl mx-auto text-center">
      <div
        class="bg-gradient-to-r from-emerald-600 to-emerald-700 rounded-3xl p-8 sm:p-12 text-white shadow-2xl border border-emerald-500/40"
      >
        <h2
          class="text-3xl sm:text-5xl font-black mb-6 tracking-tight drop-shadow-lg"
        >
          {mainContentData.callToAction.title}
        </h2>
        <p class="text-lg sm:text-xl mb-8 opacity-90 max-w-2xl mx-auto">
          {mainContentData.callToAction.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          {
            mainContentData.callToAction.buttons.map((button) => (
              <button
                class={`${
                  button.style === "white"
                    ? "bg-white text-emerald-700 hover:bg-gray-100 border border-gray-300"
                    : "bg-slate-900 border-2 border-white text-white hover:bg-slate-800"
                } 
                  px-8 py-4 rounded-lg font-bold text-lg transition-colors duration-300 shadow-xl`}
              >
                {button.text}
              </button>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</section>
