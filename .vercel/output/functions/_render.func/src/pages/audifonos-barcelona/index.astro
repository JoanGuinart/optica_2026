<Layout title={pageTitle} description={pageDescription} ogImage={pageOgImage}>
  <main class="min-h-screen">
    <!-- Hero -->
    <section class="relative py-20 sm:py-28 bg-gradient-to-br from-emerald-50 via-white to-blue-50 overflow-hidden">
